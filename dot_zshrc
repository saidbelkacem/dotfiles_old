function run_chezmoi ()
{
  if [ $(uname -n) = "thinkcentre" ]; then
  yay -Qqe > ~/pkglist.txt
  chezmoi re-add
  fi
  if [ $(uname -n) = "thinkpad" ]; then
  chezmoi update
  yay -S --needed - < ~/pkglist.txt
  fi
}
if [ $(uname -n) = "thinkpad" ]; then
  setxkbmap -option altwin:swap_alt_win
fi

